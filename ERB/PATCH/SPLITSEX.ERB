; 使用例　PRINTFORM %SPLIT_SEX(TARGET,"女の子の場合／男の娘の場合")%
; 使用例　PRINTFORM %SPLIT_SEX(TARGET,"女の子の場合／男の娘の場合／ＴＳで女の子になった場合／ＴＳで男になった場合")%
;

@SPLIT_SEX(CHARA, INPUT_TEXT)
#FUNCTIONS
#DIM CHARA
#DIMS INPUT_TEXT
#DIMS RETURN_TEXT

SPLIT INPUT_TEXT, "／", LOCALS
SIF TALENT:CHARA:オトコ <= 0 || TALENT:CHARA:ふたなり > 0  ;女性とフタナリの場合
	RETURN_TEXT '= LOCALS:0

SIF TALENT:CHARA:オトコ == 1 ;男性の場合
	RETURN_TEXT '= LOCALS:1

RETURNF RETURN_TEXT

@SPLIT_SEX2(CHARA, INPUT_TEXT)
#FUNCTIONS
#DIM CHARA
#DIMS INPUT_TEXT
#DIMS RETURN_TEXT

SPLIT INPUT_TEXT, "／", LOCALS

SIF TALENT:CHARA:オトコ <= 0  ;　♀ 場合の分岐
    RETURN_TEXT '= LOCALS:0

SIF TALENT:CHARA:オトコ == 1  ;　♂ 場合の分岐
    RETURN_TEXT '= LOCALS:1

SIF TALENT:CHARA:オトコ == 1 && CFLAG:CHARA:1 == 1  ;　♂ → ♀ 変身でＴＳした場合の分岐
    RETURN_TEXT '= LOCALS:2

SIF TALENT:CHARA:オトコ <= 0 && CFLAG:CHARA:1 == 1  ;　♀ → ♂　変身でＴＳした場合の分岐
    RETURN_TEXT '= LOCALS:3

RETURNF RETURN_TEXT

