@SHOW_SAVETIME(NUM)
#DIM NUM
TEMP = 0
TEMPS =

	
	; セーブスロットよりも大きい数字で呼び出された場合は空白表示で帰る(AutoSaveのNUM==99は除く)
	SAVENOS TEMP
	IF NUM > (TEMP - 1) && NUM != 98 && NUM != 99
		PRINTFORM %"", 50, LEFT%
		RETURN
	ENDIF
	; セーブデータが読み込めない
	CHKDATA NUM
	IF RESULT:0 != 0
		SETCOLOR 0x444444
		TEMPS = ----/--/-- --:--:--
		PRINTBUTTON @" [NO.{NUM, 2, RIGHT}]"+"―"*13+@"|%TEMPS,20,RIGHT% |－",NUM
        PRINTFORM 　
		RESETCOLOR
		RETURN
	ENDIF
	
	; EX拡張フォーマットではない
	IF SAVE_ARRAY:0 != "SP"
		TEMPS = 　 互換セーブデータ　
		PRINTBUTTON @" [NO.{NUM, 2, RIGHT}]"+"―"*13+@"|%TEMPS,20,RIGHT% |－",NUM
        PRINTFORM 　
		RETURN
	ENDIF

	PRINTBUTTON @" [NO.{NUM, 2, RIGHT}]"+"―"*13+@"|%SAVE_ARRAY:1,20,RIGHT% |－",NUM
    PRINTFORM 　

RETURN

