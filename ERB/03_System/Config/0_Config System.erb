;コンフィグ
@CONFIG
#DIM PAGE
FIRSTLINE = LINECOUNT
REDRAW 0
PAGE = 0
$MASTER_LOOP
FONTBOLD
SETCOLOR COLOR_VERMILION
PRINTFORM  Ｃ　Ｏ　Ｎ　Ｆ　Ｉ　Ｇ
FONTREGULAR
RESETCOLOR
PRINTFORM 　　　　　　　page({PAGE+1}/2)
PRINTL 
DRAWLINE
IF PAGE == 0

	PRINT ★
	SETCOLOR 255,255,150
	PRINTFORML コンフィグ設定関係

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_MAIN_F(0) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[0]コンフィグ設定の自動ロード
	RESETCOLOR

	PRINTFORML 　[1]SAVE GLOBAL (グローバルデータを上書きする)
	PRINTFORML 　[2]LOAD GLOBAL (グローバルデータをロードする)
	PRINTFORML 　[3]性嗜好フィルタを設定する（全セーブデータ共通、自動上書き）
	PRINTFORML 　[4]雑魚敵フィルタを設定する（全セーブデータ共通、自動上書き）
	PRINTFORML 　[5]特別活動時の変身設定変更（全セーブデータ共通、自動上書き）
	PRINTL

	PRINT ●
	SETCOLOR 255,120,60
	PRINTFORML 画面表示関係

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_SCREEN_F(0) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[10]素質をカテゴリ分けして表示する

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_SCREEN_F(1) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[11]戦闘中に性的パラメータの上昇を表示する

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_SCREEN_F(2) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[12]戦闘中のコマンドをカテゴリ分けして表示する

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_SCREEN_F(3) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[13]一部ウェイトの削減

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_SCREEN_F(4) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[14]素質消去後に代替素質を表示する
	RESETCOLOR
	PRINTL 

	PRINT ●
	SETCOLOR 255,120,120
	PRINTFORML イベント関連

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_EVENT_F(0) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[30]ボス襲撃イベント

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_EVENT_F(1) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[31]子触手の夜這い

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_EVENT_F(2) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[32]仲間による夜這い

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_EVENT_F(3) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[33]クズ市民イベント

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_EVENT_F(4) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[34]雑魚敵との戦闘を省略しない
	RESETCOLOR

ELSEIF PAGE == 1
	PRINT ●
	SETCOLOR 120,60,255
	PRINTFORML ゲームバランス変更

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(0) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[50]捕獲触手遭遇率アップを使用する　　　　難易度：低下

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(1) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[51]索敵ターゲットを使用する　　　　　　　難易度：低下

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(2) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[52]オート振り解き機能を使用する　　　　　難易度：低下

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(3) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[53]搾精強化機能を使用する　　　　　　　　難易度：低下

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(4) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[54]ボス触手撃破で返り血　　　　　　　　　難易度：上昇

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(5) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[55]ラスボス強化機能　　　　　　　　　　　難易度：上昇

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_BALANCE_F(6) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[56]力尽きても変身が解けない　　　　　　　難易度：低下（大）
	RESETCOLOR
	PRINTL 

	PRINT ●
	SETCOLOR 60,255,120
	PRINTFORML その他オプション

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(0) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[70]娘育成機能を使用する

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(1) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[71]オトコの敗北時に女体化させる

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(2) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[72]苗床化で産む機械にする

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(3) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[73]キャラが陥落せずに取り込まれる

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(4) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[74]ギブアップコマンドを使用する

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(5) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[75]常時避妊モード

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(6) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[76]アフターピル使用可能モード

	SETCOLOR 120,255,255
	SIF CONFIG_CHECK_OTHER_F(7) == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[77]アナルプレイではＶに挿入しない

	SETCOLOR 120,255,255
	SIF FLAG:30 == 0
		SETCOLOR 96,96,96
	PRINTFORML 　[78]二週目以後出費アップ
	RESETCOLOR
	PRINTL 

	;レイアウトを０ページ目に合わせるために改行を入れる
	PRINTL 
	PRINTL 
	PRINTL 
ENDIF
PRINTL 
PRINTFORML [100]ページ切り替え
PRINTFORML [999]戻る
$INPUT_LOOP
INPUT
IF RESULT == 100
	IF PAGE == 0
		PAGE = 1
	ELSE
		PAGE = 0
	ENDIF
	GOTO MASTER_LOOP
ELSEIF RESULT == 999
;コンフィグ設定関係
ELSEIF RESULT == 0
	INVERTBIT FLAG:800, 0
	GOTO MASTER_LOOP
ELSEIF RESULT == 1
	GLOBAL:11 = FLAG:801
	GLOBAL:12 = FLAG:802
	GLOBAL:13 = FLAG:803
	GLOBAL:14 = FLAG:804
	SAVEGLOBAL
	PRINTL 現在の設定を保存しました。
	PRINTL ゲームをロードするたびに自動で適用されます。
	PRINTW 
	GOTO MASTER_LOOP
ELSEIF RESULT == 2
	PRINTW 【コンフィグ設定を読み込みました】
	FLAG:801 = GLOBAL:11
	FLAG:802 = GLOBAL:12
	FLAG:803 = GLOBAL:13
	FLAG:804 = GLOBAL:14
	;グローバルのアップデート
	CALL UPDATE_GLOBAL
	GOTO MASTER_LOOP
ELSEIF RESULT == 3
	CALL CONFIG_F
	GOTO MASTER_LOOP
ELSEIF RESULT == 4
	CALL CONFIG_M
	GOTO MASTER_LOOP
ELSEIF RESULT == 5
	CALL CONFIG_T
	GOTO MASTER_LOOP
;画面表示関係
ELSEIF RESULT >= 10 && RESULT <= 14
	INVERTBIT FLAG:801, RESULT - 10
	GOTO MASTER_LOOP
;イベント関係
ELSEIF RESULT >= 30 && RESULT <= 34
	INVERTBIT FLAG:802, RESULT - 30
	GOTO MASTER_LOOP
;ゲームバランス変更
ELSEIF RESULT >= 50 && RESULT <= 56
	INVERTBIT FLAG:803, RESULT - 50
	GOTO MASTER_LOOP
;その他オプション
ELSEIF RESULT >= 70 && RESULT <= 74
	INVERTBIT FLAG:804, RESULT - 70
	GOTO MASTER_LOOP
ELSEIF RESULT == 75
	INVERTBIT FLAG:804, 5
	CLEARBIT FLAG:804, 6
	GOTO MASTER_LOOP
ELSEIF RESULT == 76
	INVERTBIT FLAG:804, 6
	CLEARBIT FLAG:804, 5
	GOTO MASTER_LOOP
ELSEIF RESULT == 77
	INVERTBIT FLAG:804, RESULT - 70
	GOTO MASTER_LOOP
ELSEIF RESULT == 78
	INVERTBIT FLAG:30, 1
	GOTO MASTER_LOOP
ELSE
	PRINTL 
	PRINTL 正しい値を入力してください
	GOTO INPUT_LOOP
ENDIF

