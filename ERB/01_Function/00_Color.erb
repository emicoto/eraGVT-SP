;-------------------
;●カラーパレット
;	目的　：配色テーマを使用するときここで分岐させる
;	使用例：SETCOLOR PALETTE("BUTTON")
;-------------------
@PALETTE(ARGS_COLOR_NAME)
#FUNCTIONS
#DIMS DYNAMIC ARGS_COLOR_NAME
#DIMS DYNAMIC RETURN_PALETTE

	SELECTCASE ARGS_COLOR_NAME
	CASE "BUTTON"
		RETURN_PALETTE = 0xCACA79
	CASE "SELECT"
		RETURN_PALETTE = 0xA2FFD3
	CASE "BAR_OFF"			;バーの背景カラー
		RETURN_PALETTE = 0x404040
	CASE "LGRAY"				
		RETURN_PALETTE = 0xBBBBB7
	CASE "GRAY"	
		RETURN_PALETTE = 0x8A8D8E
	CASE "DARK"
		RETURN_PALETTE = 0x3C3C41
	CASE "DEFAULT"
		RETURN_PALETTE = 0xD3DAE0
    CASE "RED"
    	RETURN_PALETTE = 0xD3DAE0
	CASE "PINK"
		RETURN_PALETTE = 0xFFB7E0
	CASE "VERMILION"
		RETURN_PALETTE = 0xFF8A7E
	CASE "ORANGE"
		RETURN_PALETTE = 0xFFAF55
	CASE "YELLOW"
		RETURN_PALETTE = 0xFFED6E
	CASE "APPLEGREEN"
		RETURN_PALETTE = 0xC6E074
	CASE "GREEN"
		RETURN_PALETTE = 0x8BE884
	CASE "MINTGREEN"
		RETURN_PALETTE = 0x93F2C5
	CASE "AQUA"
		RETURN_PALETTE = 0x81ECF7
	CASE "BLUE"
		RETURN_PALETTE = 0x77B3FF
    CASE "SKY"
        RETURN_PALETTE = 0X9AFFFC
	CASE "VIOLET"
		RETURN_PALETTE = 0x8B8DFF
	CASE "PURPLE"
		RETURN_PALETTE = 0xCC8BFF
	CASE "PLUM"
		RETURN_PALETTE = 0xF781AF
    CASE "PLATINA"
        RETURN_PALETTE = 0xCFCEC2
ENDSELECT

	RETURNF RETURN_PALETTE