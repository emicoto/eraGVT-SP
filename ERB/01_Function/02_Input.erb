@INPUTYN(NUM:0=1,NUM:1=2,NOINDENT=0,ALIGN=0)
#DIM NUM,2
#DIM NOINDENT
#DIM ALIGN
#DIM SAVE_COLOR

GETCOLOR
SAVE_COLOR = RESULT:0


IF ALIGN == 1
ALIGNMENT RIGHT
ELSEIF ALIGN == 2
ALIGNMENT CENTER
ENDIF


SIF NOINDENT == 0
PRINTFORM %INDENT(2)%
FONTSTYLE 8
SETCOLOR COLOR_BUTTON
PRINTBUTTON @"{NUM:0}.　%"はい",6,LEFT%　★",NUM:0
FONTSTYLE 0
PRINTFORM %INDENT(10)%
FONTSTYLE 8
PRINTBUTTON @"★　%"いいえ",6,LEFT%　.{NUM:1}",NUM:1
FONTSTYLE 0
PRINTL
SETCOLOR SAVE_COLOR

SIF ALIGN > 0
ALIGNMENT LEFT