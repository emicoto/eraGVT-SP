            PRINTBUTTONC @"%LINK_TEXT, LINK_WIDTH% ★", LINK_NUM
        ELSE
            PRINTBUTTONC @"%LINK_TEXT, LINK_WIDTH%", LINK_NUM
        ENDIF
    ENDIF

	FONTSTYLE 0


	SETCOLOR SAVE_COLOR

	RETURN 0

