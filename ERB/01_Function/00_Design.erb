;-------------------
; インデント（字下げ）
;	使用例：%INDENT(2)%
;	目的　：インデント幅を視覚的にする
;			インデントを一括置換しやすくする
;	引数　：APP_NUM……インデントする半角スペースの数
;	戻り値：文字列で半角スペースを返す
;	備考　：式中関数
;-------------------
@INDENT(SPACES_NUM)
	#FUNCTIONS
	#DIM SPACES_NUM
	#DIM SPACES_COUNTER
	#DIMS RETURN_STR

	RETURN_STR '= ""
	FOR SPACES_COUNTER, 0, SPACES_NUM
		RETURN_STR '= RETURN_STR + " "
	NEXT
	RETURNF RETURN_STR

@INDENT2(SPACES_NUM)
	#FUNCTIONS
	#DIM SPACES_NUM
	#DIM SPACES_COUNTER
	#DIMS RETURN_STR

	RETURN_STR '= ""
	FOR SPACES_COUNTER, 0, SPACES_NUM
		RETURN_STR '= RETURN_STR + "　"
	NEXT
	RETURNF RETURN_STR
