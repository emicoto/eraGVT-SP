;**********************************************************
;ショップ画面のインフォメーション表示
@SHOP_INFOMATION
#DIM CCOUNT

LOCAL = 0

;行動に必要な体力のチェック
FOR CCOUNT, 0, CHARANUM
	SIF CCOUNT == MASTER
		CONTINUE

	IF CFLAG:CCOUNT:0 == 0 && CFLAG:CCOUNT:100 == 101
		CALL CHECK_ACTION("出撃",CCOUNT)
		IF RESULT == 0
			LOCAL = 1
			PRINTFORML %CALLNAME:CCOUNT%は出撃に必要な体力がありません
		ENDIF
	ENDIF

	IF CFLAG:CCOUNT:0 == 0 && CFLAG:CCOUNT:100 == 102
		CALL CHECK_ACTION("鍛練",CCOUNT)
		IF RESULT == 0
			LOCAL = 1
			PRINTFORML %CALLNAME:CCOUNT%は鍛錬に必要な体力がありません
		ENDIF
	ENDIF

	IF CFLAG:CCOUNT:0 == 0 && CFLAG:CCOUNT:100 == 104
		CALL CHECK_ACTION("活動",CCOUNT)
		IF RESULT == 0
			LOCAL = 1
			PRINTFORML %CALLNAME:CCOUNT%は特別活動に必要な体力がありません
		ENDIF
	ENDIF

	IF CFLAG:CCOUNT:0 == 0 && CFLAG:CCOUNT:100 == 105
		CALL CHECK_ACTION("防衛",CCOUNT)
		IF RESULT == 0
			LOCAL = 1
			PRINTFORML %CALLNAME:CCOUNT%は拠点防衛に必要な体力がありません
		ENDIF
	ENDIF

	IF CFLAG:CCOUNT:0 == 0 && CFLAG:CCOUNT:100 == 106
		CALL CHECK_ACTION("支援",CCOUNT)
		IF RESULT == 0
			LOCAL = 1
			PRINTFORML %CALLNAME:CCOUNT%は戦闘支援に必要な体力がありません
		ENDIF
	ENDIF
NEXT

SIF LOCAL == 0
	PRINTL なし
