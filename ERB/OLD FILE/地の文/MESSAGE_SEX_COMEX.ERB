;結界の状態
;ARG	部位
@MESSAGE_SHIELD_STATE, ARG

IF BASE:(ARG + 30) <= 0
	RESULT = - 1
ELSE
	CALL PERCENT_CAL, BASE:(ARG + 30), MAXBASE:(ARG + 30)
ENDIF

IF RESULT <= 0
	IF RAND:3 == 0
		PRINTFORML ついに%TALENTNAME:(ARG + 190)%は完全に力を失い、消え去ってしまった！
	ELSEIF RAND:2 == 0
		PRINTFORML 完全に力を失った%TALENTNAME:(ARG + 190)%にヒビが入り、粉々に砕けてしまった！
	ELSE
		PRINTFORML %TALENTNAME:(ARG + 190)%は完全に力を失い、触手に引き裂かれてしまった！
	ENDIF
	IF FLAG:700 || CFLAG:0 != 0
		SIF ARG == 0
			PRINT 無防備な陰核
		SIF ARG == 1
			PRINT 無防備にひくつく秘所
		SIF ARG == 2
			PRINT キュッと引き締まった菊門
		SIF ARG == 3
			PRINT ツンと天を衝く乳首
		PRINTFORML が触手の眼前にさらされてしまっている・・・
	ENDIF
	PRINTL 
ELSEIF RESULT <= 25
	PRINTFORML 今にも破られそうな%TALENTNAME:(ARG:0 + 190)%が、かろうじて触手の動きを止めている・・・
	PRINTL 
ELSEIF RESULT <= 50
	PRINTFORML 未だ触手の跳梁を許さない%TALENTNAME:(ARG:0 + 190)%ではあるが、もうあまり保ちそうにない・・・
	PRINTL 
ELSEIF RESULT <= 75
	PRINTFORML %TALENTNAME:(ARG:0 + 190)%は、依然として触手の侵入を拒んでいる！
	PRINTL 
ELSE
	PRINTFORML 淡く輝きを放つ%TALENTNAME:(ARG:0 + 190)%が、力強く触手の侵入を阻んだ！
	PRINTL 
ENDIF

