@MESSAGE_SEX_COMEX, ARG:0, ARG:1
;ARG:0	責め部位
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;ARG:1	コマンド自体の責め部位
;	1：Ｃ　2：Ｖ　3：Ａ　4：Ｂ

;Ｃ責めコマンドかつＣ責めのみ
SIF ARG:1 == 1 && (ARG:0 & 14) == 0
	RETURN 0

;Ｖ責めコマンドかつＶ責めのみ
SIF ARG:1 == 2 && (ARG:0 & 13) == 0
	RETURN 0

;Ａ責めコマンドかつＡ責めのみ
SIF ARG:1 == 3 && (ARG:0 & 11) == 0
	RETURN 0

;Ｂ責めコマンドかつＢ責めのみ
SIF ARG:1 == 4 && (ARG:0 & 7) == 0
	RETURN 0

