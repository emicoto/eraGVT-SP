;V拡張攻め

;性コマンド分類
@SEX_TYPE_COM1009
RETURN 挿入

@SEX_SPCOM9
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
EX_COM = 2
SH_COM = 0

;射精部位フラグ:膣を立てる
TFLAG:4 = TFLAG:4 | 膣
INSERT = INSERT | 膣

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 100

;射精値 800
CALL TENTACLE_SYASEI_UP, 800

;我慢：大量射精でなければ射精部位フラグを折る
SIF FLAG:15 < FLAG:14 * 2
	TFLAG:4 = 0

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 1009

;地の文：SPCOM9
CALL MESSAGE_SEX_SPCOM9, EX_COM, SH_COM

;処女なら苦痛が大量に入る
IF TALENT:処女 > 0
	LOCAL:10 = 20000
	TALENT:処女 = -1
	CFLAG:206 = 3
	TCVAR:1 = 1
ELSE
	LOCAL:10 = 0
ENDIF

;結界による触手本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 2

;ベース
EXP:Ｖ経験 += 5
SIF FLAG:110 == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:近親交配経験 += 1
SIF FLAG:110 == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:近親交配経験 += 1

;快V
IF ABL:Ｖ感覚 == 0
	LOCAL:1 = 1000
ELSEIF ABL:Ｖ感覚 == 1
	LOCAL:1 = 2000
ELSEIF ABL:Ｖ感覚 == 2
	LOCAL:1 = 4000
ELSEIF ABL:Ｖ感覚 == 3
	LOCAL:1 = 10000
ELSEIF ABL:Ｖ感覚 == 4
	LOCAL:1 = 20000
ELSEIF ABL:Ｖ感覚 >= 5
	LOCAL:1 = 40000
ENDIF
;拡張経験が少ない場合は快Vが入りにくい
IF EXP:Ｖ拡張経験 < 3
	TIMES LOCAL:1, 0.10
ELSEIF EXP:Ｖ拡張経験 < 5
	TIMES LOCAL:1, 0.50
ELSEIF EXP:Ｖ拡張経験 < 8
	TIMES LOCAL:1, 0.80
ELSE
ENDIF

;屈服
;拡張経験に応じて
IF EXP:Ｖ拡張経験 < 3
	LOCAL:8 = 2000
ELSEIF EXP:Ｖ拡張経験 < 5
	LOCAL:8 = 4000
ELSEIF EXP:Ｖ拡張経験 < 8
	LOCAL:8 = 8000
ELSE
	LOCAL:8 = 20000
ENDIF

;恥情
;拡張経験が高いと恥情が入る
IF EXP:Ｖ拡張経験 < 3
	LOCAL:9 = 200
ELSEIF EXP:Ｖ拡張経験 < 5
	LOCAL:9 = 400
ELSEIF EXP:Ｖ拡張経験 < 8
	LOCAL:9 = 800
ELSE
	LOCAL:9 = 2000
ENDIF

;苦痛
;拡張経験が低いと入る
IF EXP:Ｖ拡張経験 < 3
	LOCAL:10 += 4000
ELSEIF EXP:Ｖ拡張経験 < 5
	LOCAL:10 += 3200
ELSEIF EXP:Ｖ拡張経験 < 8
	LOCAL:10 += 1600
ELSE
	LOCAL:10 += 400
ENDIF

;恐怖
;拡張経験が低いと入る
IF EXP:Ｖ拡張経験 < 3
	LOCAL:11 = 8000
ELSEIF EXP:Ｖ拡張経験 < 5
	LOCAL:11 = 6400
ELSEIF EXP:Ｖ拡張経験 < 8
	LOCAL:11 = 3200
ELSE
	LOCAL:11 = 800
ENDIF

;習得
IF ABL:奉仕精神 == 0
	LOCAL:6 = 20
ELSEIF ABL:奉仕精神 == 1
	LOCAL:6 = 50
ELSEIF ABL:奉仕精神 == 2
	LOCAL:6 = 100
ELSEIF ABL:奉仕精神 == 3
	LOCAL:6 = 200
ELSEIF ABL:奉仕精神 == 4
	LOCAL:6 = 500
ELSEIF ABL:奉仕精神 >= 5
	LOCAL:6 = 1000
ENDIF

;潤滑が低いと苦痛が入る
SIF PALAM:潤滑 < 2000
	LOCAL:10 += 2000

;行動予約なし
TFLAG:17 = -1
;触手の行動を記録
TFLAG:20 = 1009

;習得基本値
LOCAL:6 += 2000

;欲情基本値
LOCAL:7 += 500

;屈服基本値
LOCAL:8 += 4000

;恥情基本値
LOCAL:9 += 0

;苦痛基本値
LOCAL:10 += 1500

;恐怖基本値
LOCAL:11 += 1500

;体力消費基本値
LOCAL:12 += 50

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12

