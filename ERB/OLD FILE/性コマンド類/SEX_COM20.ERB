;両穴フィニッシュ（ＶＡ系からの派生限定行動）

;性コマンド分類
@SEX_TYPE_COM20
RETURN 挿入

@SEX_COM20,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ｖ+Ａ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;射精部位フラグ:膣とアナルを立てる
TFLAG:4 = TFLAG:4 | 膣
TFLAG:4 = TFLAG:4 | アナル
INSERT = INSERT | 膣
INSERT = INSERT | アナル
;触手を使っているなら手と口を立てる
IF (FLAG:110 == 1) && (TALENT:(FLAG:111):寄生 == 0 || FILTER_CHECK_F(13) > 0) && (TALENT:(FLAG:111):ふたなり > 0 || TALENT:(FLAG:111):オトコ > 0)
ELSE
	TFLAG:4 = TFLAG:4 | 手
	TFLAG:4 = TFLAG:4 | 口
ENDIF
;Ｂ追加攻めがあるなら胸を立てる
SIF (EX_COM & Ｂ)
	TFLAG:4 = TFLAG:4 | 胸

;悪堕ちキャラのペニス位置をセット
IF FLAG:110 == 1 && (TALENT:(FLAG:111):オトコ > 0 || TALENT:(FLAG:111):ふたなり > 0)
	IF RAND:2 == 0
		TFLAG:18 = 膣
	ELSE
		TFLAG:18 = アナル
	ENDIF
ENDIF

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 300

;射精値 1200
CALL TENTACLE_SYASEI_UP, 1200

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 20

IF FLAG:10 == 2
	CALLFORM MESSAGE_MOB_{ARG}_COM20, EX_COM, SH_COM
ELSE
	;地の文：洗脳/悪堕ちキャラが操作キャラに両穴フィニッシュをした
	SIF FLAG:110 == 1
		CALL MESSAGE_OTHER_SEX_COM20
	;地の文:COM20
	CALL MESSAGE_SEX_COM20, EX_COM, SH_COM
ENDIF

;結界による触手本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 3

;ベース
EXP:Ｖ経験 += 1
EXP:Ａ経験 += 1
SIF FLAG:110 == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:近親交配経験 += 1
SIF FLAG:110 == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:近親交配経験 += 1

;快V
IF ABL:Ｖ感覚 == 0
	LOCAL:1 = 3450
ELSEIF ABL:Ｖ感覚 == 1
	LOCAL:1 = 4125
ELSEIF ABL:Ｖ感覚 == 2
	LOCAL:1 = 6000
ELSEIF ABL:Ｖ感覚 == 3
	LOCAL:1 = 8250
ELSEIF ABL:Ｖ感覚 == 4
	LOCAL:1 = 10500
ELSEIF ABL:Ｖ感覚 >= 5
	LOCAL:1 = 15000
ENDIF

;快A
IF ABL:Ａ感覚 == 0
	LOCAL:2 = 690
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:2 = 2065
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:2 = 6000
ELSEIF ABL:Ａ感覚 == 3
	LOCAL:2 = 8250
ELSEIF ABL:Ａ感覚 == 4
	LOCAL:2 = 10500
ELSEIF ABL:Ａ感覚 >= 5
	LOCAL:2 = 15000
ENDIF

;恭順
IF ABL:従順 <= 2
	LOCAL:5 = 400
ELSEIF ABL:従順 == 3
	LOCAL:5 = 1000
ELSEIF ABL:従順 == 4
	LOCAL:5 = 2000
ELSEIF ABL:従順 >= 5
	LOCAL:5 = 4000
ENDIF

;習得
IF ABL:奉仕精神 == 0
	LOCAL:6 = 15
ELSEIF ABL:奉仕精神 == 1
	LOCAL:6 = 35
ELSEIF ABL:奉仕精神 == 2
	LOCAL:6 = 80
ELSEIF ABL:奉仕精神 == 3
	LOCAL:6 = 135
ELSEIF ABL:奉仕精神 == 4
	LOCAL:6 = 300
ELSEIF ABL:奉仕精神 >= 5
	LOCAL:6 = 600
ENDIF

;屈服　Ａ感覚に応じて
IF ABL:Ａ感覚 == 0
	LOCAL:8 = 15
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:8 = 30
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:8 = 75
ELSEIF ABL:Ａ感覚 == 3
	LOCAL:8 = 150
ELSEIF ABL:Ａ感覚 == 4
	LOCAL:8 = 300
ELSEIF ABL:Ａ感覚 >= 5
	LOCAL:8 = 650 + ABL:Ａ感覚 * 15
ENDIF

;潤滑が低いと苦痛が入る
IF PALAM:潤滑 < 1000
	LOCAL:10 += 1500
ELSEIF PALAM:潤滑 < 2000
	LOCAL:10 += 300
ENDIF

;V感覚が低いと恐怖が入る
IF ABL:Ｖ感覚 == 0
	LOCAL:11 = 300
ELSEIF ABL:Ｖ感覚 == 1
	LOCAL:11 = 75
ELSEIF ABL:Ｖ感覚 == 2
	LOCAL:11 = 30
ELSEIF ABL:Ｖ感覚 == 3
	LOCAL:11 = 15
ELSE
ENDIF
;A感覚が低いと恐怖が入る
IF ABL:Ａ感覚 == 0
	LOCAL:11 = 150
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:11 = 75
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:11 = 35
ELSEIF ABL:Ａ感覚 == 3
	LOCAL:11 = 15
ELSE
ENDIF

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ｖ+Ａ, 1, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;触手の行動を記録
TFLAG:20 = 20

;強拘束状態を解除
SIF (TCVAR:12 & 強拘束)
	TCVAR:12 -= 強拘束

;習得基本値
LOCAL:6 += 100

;欲情基本値
LOCAL:7 += 2000

;屈服基本値
LOCAL:8 += 8000

;恥情基本値
LOCAL:9 += 2000

;苦痛基本値
LOCAL:10 += 0

;恐怖基本値
LOCAL:11 += 3000

;体力消費基本値
LOCAL:12 += 1000

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
