;衣装を破く

;性コマンド分類
@SEX_TYPE_COM14
RETURN 通常

@SEX_COM14,ARG = 0, ARG:1 = 0
#DIM DAMAGE
;追加責め
EX_COM = 0
SH_COM = 0

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 10

;射精値 50
CALL TENTACLE_SYASEI_UP, 50

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 14

IF FLAG:10 == 2
	CALLFORM MESSAGE_MOB_{ARG}_COM14, EX_COM, SH_COM
ELSE
	;地の文：洗脳/悪堕ちキャラが操作キャラの衣装を破いた
	SIF FLAG:110 == 1
		CALL MESSAGE_OTHER_SEX_COM14
	;地の文：COM14
	CALL MESSAGE_SEX_COM14
ENDIF

;結界による触手本数の変動
CALL SET_TENTACLE_POOL

;ベース
;恥情、露出癖Lvに応じて軽減
IF ABL:恥情 <= 2
	LOCAL:9 = 2000
ELSEIF ABL:恥情 == 3
	LOCAL:9 = 1000
ELSEIF ABL:恥情 == 4
	LOCAL:9 = 500
ELSEIF ABL:恥情 >= 5
	LOCAL:9 = 100
ENDIF

;アウターが残ってる場合は羞恥を軽減
IF CLOTH_OUTER_PER > 90
	TIMES LOCAL:9, 0.25
ELSEIF CLOTH_OUTER_PER > 75
	TIMES LOCAL:9, 0.75
ELSEIF CLOTH_INNER_PER < 25
	TIMES LOCAL:9, 1.25
ENDIF

;恭順/恐怖
IF ABL:従順 == 1
	LOCAL:11 = 2000
ELSEIF ABL:従順 == 2
	LOCAL:11 = 1000
ELSEIF ABL:従順 == 3
	LOCAL:11 = 500
ELSEIF ABL:従順 == 4
	LOCAL:5 = 200
ELSEIF ABL:従順 >= 5
	LOCAL:5 = 600
ENDIF

;ダメージ量を計算
DAMAGE = RAND:11 + RAND:11 + 10

;衣装へのダメージを反映
FONTBOLD
PRINTFORML 衣装に{DAMAGE}の損傷を受けた！
FONTREGULAR
PRINTL 
CALL CLOTH_BATTLE_DAMAGE, DAMAGE

;前のターンが服を破くでない場合、行動予約を引き継ぐ
SIF TFLAG:20 == 14
	TFLAG:17 = -1

;触手の行動を記録
TFLAG:20 = 14

;習得基本値
LOCAL:6 += 0

;欲情基本値
LOCAL:7 += 0

;屈服基本値
LOCAL:8 += 0

;恥情基本値
LOCAL:9 += 1000

;苦痛基本値
LOCAL:10 += 0

;恐怖基本値
LOCAL:11 += 0

;体力消費基本値
LOCAL:12 += 0

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
