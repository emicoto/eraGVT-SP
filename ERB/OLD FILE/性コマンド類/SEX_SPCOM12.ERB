;ヘソ快楽攻め

;性コマンド分類
@SEX_TYPE_COM1012
RETURN 通常

@SEX_SPCOM12
;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 100

;射精値 100
CALL TENTACLE_SYASEI_UP, 100

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 1012

;地の文:SPCOM12
CALL MESSAGE_SEX_SPCOM12

;結界による触手本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 5

;ベース
;屈服　マゾっ気で変化
IF ABL:マゾっ気 == 0
	LOCAL:8 = 2000
ELSEIF ABL:マゾっ気 == 1
	LOCAL:8 = 4000
ELSEIF ABL:マゾっ気 == 2
	LOCAL:8 = 6000
ELSEIF ABL:マゾっ気 == 3
	LOCAL:8 = 8000
ELSEIF ABL:マゾっ気 == 4
	LOCAL:8 = 16000
ELSEIF ABL:マゾっ気 >= 5
	LOCAL:8 = 24000
ENDIF

;恐怖　従順とマゾっ気で大まかに
IF ABL:従順 < 4
	IF ABL:マゾっ気 < 4
		LOCAL:11 = 20000
	ELSE
		LOCAL:11 = 2000
	ENDIF
ELSE
	IF ABL:マゾっ気 < 4
		LOCAL:11 = 2000
	ELSE
		LOCAL:11 = 200
	ENDIF
ENDIF

;行動予約なし
TFLAG:17 = -1
;触手の行動を記録
TFLAG:20 = 1012

;習得基本値
LOCAL:6 += 0

;欲情基本値
LOCAL:7 += 10000

;屈服基本値
LOCAL:8 += 5000

;恥情基本値
LOCAL:9 += 0

;苦痛基本値
LOCAL:10 += 0

;恐怖基本値
LOCAL:11 += 2000

;体力消費基本値
LOCAL:12 += 1050

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
