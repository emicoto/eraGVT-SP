;サブミッションファック

;性コマンド分類
@SEX_TYPE_COM1015
RETURN 通常

@SEX_SPCOM15
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
EX_COM = 2
SH_COM = 0

;射精部位フラグを立てる
TFLAG:4 = TFLAG:4 | 膣
TFLAG:4 = TFLAG:4 | 口
INSERT = INSERT | 膣

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 100

;射精値 800
CALL TENTACLE_SYASEI_UP, 800

;我慢：大量射精でなければ射精部位フラグを折る
SIF FLAG:15 < FLAG:14 * 2
	TFLAG:4 = 0

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 1015

;地の文：SPCOM15
CALL MESSAGE_SEX_SPCOM15, EX_COM, SH_COM

;処女なら苦痛が大量に入る
IF TALENT:処女 > 0
	LOCAL:10 = 10000
	TALENT:処女 = -1
	CFLAG:206 = 3
	TCVAR:1 = 1
ELSE
	LOCAL:10 = 0
ENDIF

;結界による触手本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 2

;ベース
EXP:Ｖ経験 += 3
EXP:苦痛快楽経験 += 2
SIF FLAG:110 == 0 && INCEST_F(TARGET, FLAG:10 * 100 + FLAG:11, 1) > 0
	EXP:近親交配経験 += 1
SIF FLAG:110 == 1 && INCEST_F(TARGET, FLAG:111) > 0
	EXP:近親交配経験 += 1

;快V
IF ABL:Ｖ感覚 == 0
	LOCAL:1 = 1000
ELSEIF ABL:Ｖ感覚 == 1
	LOCAL:1 = 2000
ELSEIF ABL:Ｖ感覚 == 2
	LOCAL:1 = 4000
ELSEIF ABL:Ｖ感覚 == 3
	LOCAL:1 = 10000
ELSEIF ABL:Ｖ感覚 == 4
	LOCAL:1 = 20000
ELSEIF ABL:Ｖ感覚 >= 5
	LOCAL:1 = 40000
ENDIF

;屈服　マゾっ気で変化
IF ABL:マゾっ気 == 0
	LOCAL:8 = 2000
ELSEIF ABL:マゾっ気 == 1
	LOCAL:8 = 4000
ELSEIF ABL:マゾっ気 == 2
	LOCAL:8 = 6000
ELSEIF ABL:マゾっ気 == 3
	LOCAL:8 = 8000
ELSEIF ABL:マゾっ気 == 4
	LOCAL:8 = 16000
ELSEIF ABL:マゾっ気 >= 5
	LOCAL:8 = 24000
ENDIF

;恐怖　従順とマゾっ気で大まかに
IF ABL:従順 < 4
	IF ABL:マゾっ気 < 4
		LOCAL:11 = 20000
	ELSE
		LOCAL:11 = 2000
	ENDIF
ELSE
	IF ABL:マゾっ気 < 4
		LOCAL:11 = 2000
	ELSE
		LOCAL:11 = 200
	ENDIF
ENDIF

;潤滑が低いと苦痛が入る
SIF PALAM:潤滑 < 2000
	LOCAL:10 += 2000

;行動予約なし
TFLAG:17 = -1
;触手の行動を記録
TFLAG:20 = 1015

;習得基本値
LOCAL:6 += 2000

;欲情基本値
LOCAL:7 += 500

;屈服基本値
LOCAL:8 += 0

;恥情基本値
LOCAL:9 += 0

;苦痛基本値
LOCAL:10 += 15000

;恐怖基本値
LOCAL:11 += 1500

;体力消費基本値
LOCAL:12 += 1050

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12

