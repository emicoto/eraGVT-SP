;C攻めSP

;性コマンド分類
@SEX_TYPE_COM1000
RETURN 通常

@SEX_SPCOM0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ｃ
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 100

;射精値 100
CALL TENTACLE_SYASEI_UP, 100

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 1000

;地の文：洗脳/悪堕ちキャラが操作キャラにC攻めSPをした
SIF FLAG:110 == 1
	CALL MESSAGE_OTHER_SEX_SPCOM0

;地の文：SPCOM0
CALL MESSAGE_SEX_SPCOM0, EX_COM, SH_COM

;結界による触手本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 8

;ベース
EXP:苦痛快楽経験 += 1

;快C
IF ABL:Ｃ感覚 == 0
	LOCAL:0 = 2000
ELSEIF ABL:Ｃ感覚 == 1
	LOCAL:0 = 4000
ELSEIF ABL:Ｃ感覚 == 2
	LOCAL:0 = 10000
ELSEIF ABL:Ｃ感覚 == 3
	LOCAL:0 = 20000
ELSEIF ABL:Ｃ感覚 == 4
	LOCAL:0 = 40000
ELSEIF ABL:Ｃ感覚 >= 5
	LOCAL:0 = 100000
ENDIF
;ペニス持ちには効果大
SIF TALENT:オトコ > 0 || TALENT:ふたなり > 0
	LOCAL:0 += 1500

;C感覚が低くいと苦痛と恐怖が入る
IF ABL:Ｃ感覚 < 4
	LOCAL:10 = 1000
	LOCAL:11 = 1000
ENDIF

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ｃ, 2, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;触手の行動を記録
TFLAG:20 = 1000

;習得基本値
LOCAL:6 += 500

;欲情基本値
LOCAL:7 += 0

;屈服基本値
LOCAL:8 += 2000

;恥情基本値
LOCAL:9 += 0

;苦痛基本値
LOCAL:10 += 500

;恐怖基本値
LOCAL:11 += 1000

;体力消費基本値
LOCAL:12 += 200

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
