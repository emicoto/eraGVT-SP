;A攻め弱

;性コマンド分類
@SEX_TYPE_COM4
RETURN 通常

@SEX_COM4,ARG = 0,ARG:1 = 0
;EX_COM	追加責め実行部位（ビット）
;	1：Ｃ　2：Ｖ　4：Ａ　8：Ｂ
;追加責め
CALL SEX_COMEX_RANDOM, Ａ, ARG:1
EX_COM = RESULT:0
SH_COM = RESULT:1

;取得パラメータ計算
;ベース値の明示的初期化
REPEAT 12
	LOCAL:COUNT = 0
REND

;油断度の上昇
TFLAG:3 += 25

;射精値 100
CALL TENTACLE_SYASEI_UP, 100

;触手サイズの設定
CALL SET_TENTACLE_SIZE, FLAG:10, FLAG:11, FLAG:110, FLAG:111, 4

IF FLAG:10 == 2
	CALLFORM MESSAGE_MOB_{ARG}_COM4, EX_COM, SH_COM
ELSE
	;地の文：洗脳/悪堕ちキャラが操作キャラにA攻め弱をした
	SIF FLAG:110 == 1
		CALL MESSAGE_OTHER_SEX_COM4
	;地の文：COM4
	CALL MESSAGE_SEX_COM4, EX_COM, SH_COM
ENDIF

;結界による触手本数の変動
CALL SET_TENTACLE_POOL
;服へのダメージ
CALL CLOTH_BATTLE_DAMAGE, 4

;ベース
SIF EX_COM & Ａ
	EXP:Ａ経験 += 1

;快A　感覚が低いうちは少なめ
IF ABL:Ａ感覚 == 0
	LOCAL:2 = 40
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:2 = 400
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:2 = 1000
ELSEIF ABL:Ａ感覚 == 3
	LOCAL:2 = 2000
ELSEIF ABL:Ａ感覚 == 4
	LOCAL:2 = 4000
ELSEIF ABL:Ａ感覚 >= 5
	LOCAL:2 = 10000
ENDIF

;竿持ちの場合
IF (TALENT:ふたなり > 0 || TALENT:オトコ > 0 )
;快C
     IF ABL:Ａ感覚 == 0
	  LOCAL:0 = 15
      ELSEIF ABL:Ａ感覚 == 1
	  LOCAL:0 = 100
      ELSEIF ABL:Ａ感覚 == 2
	  LOCAL:0 = 300
      ELSEIF ABL:Ａ感覚 == 3
	  LOCAL:0 = 650
      ELSEIF ABL:Ａ感覚 == 4
	  LOCAL:0 = 1200
      ELSEIF ABL:Ａ感覚 >= 5
	  LOCAL:0 = 3000
     ENDIF
ENDIF

;屈服
IF ABL:Ａ感覚 == 0
	LOCAL:8 = 100
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:8 = 200
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:8 = 500
ELSEIF ABL:Ａ感覚 == 3
	LOCAL:8 = 1000
ELSEIF ABL:Ａ感覚 == 4
	LOCAL:8 = 2000
ELSEIF ABL:Ａ感覚 >= 5
	LOCAL:8 = 4500 * ABL:Ａ感覚 * 100
ENDIF

;感覚と潤滑が低いと苦痛が入る
IF ABL:Ａ感覚 < 3
	IF PALAM:潤滑 < 100
		LOCAL:10 = 1000
	ELSEIF PALAM:潤滑 < 10000
		LOCAL:10 = 100
	ELSE
		LOCAL:10 = 10
	ENDIF
ELSE
	IF PALAM:潤滑 < 100
		LOCAL:10 = 100
	ELSEIF PALAM:潤滑 < 10000
		LOCAL:10 = 10
	ELSE
	ENDIF
ENDIF
SIF BASE:Ａ結界耐久力 > 0
	LOCAL:10 = 0

;感覚が低いと恐怖が入る
IF ABL:Ａ感覚 == 0
	LOCAL:11 = 1000
ELSEIF ABL:Ａ感覚 == 1
	LOCAL:11 = 500
ELSEIF ABL:Ａ感覚 == 2
	LOCAL:11 = 200
ELSE
ENDIF
SIF BASE:Ａ結界耐久力 > 0
	LOCAL:11 /= 2

;追加責め実行
IF EX_COM
	CALL SEX_COMEX, Ａ, 0, EX_COM | SH_COM
	REPEAT 12
		LOCAL:COUNT += RESULT:COUNT
	REND
ENDIF

;行動予約なし
TFLAG:17 = -1
;触手の行動を記録
TFLAG:20 = 4

;習得基本値
LOCAL:6 += 0

;欲情基本値
LOCAL:7 += 0

;屈服基本値
LOCAL:8 += 500

;恥情基本値
LOCAL:9 += 500

;苦痛基本値
LOCAL:10 += 100

;恐怖基本値
LOCAL:11 += 100

;体力消費基本値
LOCAL:12 += 50

;計算へ
CALL PALAM_CAL, LOCAL:0, LOCAL:1, LOCAL:2, LOCAL:3, LOCAL:4, LOCAL:5, LOCAL:6, LOCAL:7, LOCAL:8, LOCAL:9, LOCAL:10, LOCAL:11, LOCAL:12
