;手淫攻撃
@COM100

;距離表示
CALL PRINT_DISTANCE
PRINTL 

;射精部位フラグ:手を立てる
SIF (FLAG:15 >= FLAG:14 * 2) || RAND:2 == 0
	TFLAG:4 = TFLAG:4 | 手
;強拘束中は射精部位フラグを折る
SIF (TCVAR:12 & 強拘束)
	TFLAG:4 = 0

;防御フラグ：奉仕するにする
TCVAR:2 = 体勢：奉仕する

;油断度の上昇
TFLAG:3 += 55 + 5 * ABL:技巧

;地の文：手淫攻撃
CALL MESSAGE_BATTLE_CHARA_SEX_ATTACK100
;地の文：洗脳/悪堕ちキャラが操作キャラの手淫攻撃を見た
SIF FLAG:110 == 1
	CALL MESSAGE_OTHER_BATTLE_CHARA_SEX_ATTACK100

;射精ゲージを記録
LOCAL:1 = FLAG:15

;射精
LOCAL = MIN(MAXBASE:性耐性 / 5, 75) + 100 + ABL:技巧 * 25
CALL TENTACLE_SYASEI_UP, LOCAL

PRINTL
IF (FLAG:110 == 0)
	CALL TENTACLE_ACCESS, "NAME"
ELSEIF (FLAG:110 == 1)
	PRINTFORM %PRINT_TRANSCALLNAME(FLAG:111)%
ENDIF
PRINT に
FONTBOLD
PRINTFORM {FLAG:15 - LOCAL:1}の快楽
FONTREGULAR
PRINTL を与えた！
PRINTW 

;触手の射精チェック
CALL TENTACLE_SYASEI_CHECK
PRINTL 

;技巧Lv3以上なら10%でフェラチオを誘発する
IF ABL:技巧 >= 3 && RAND:100 < 10
	IF FLAG:10 == 2
		TRYCALLFORM TENTACLE_MOB_{FLAG:11}_REACTION_REF, 3
	ELSEIF FLAG:10 == 1
		TRYCALLFORM TENTACLE_LASTBOSS_{FLAG:11}_REACTION_REF, 3
	ELSE
		TRYCALLFORM TENTACLE_BOSS_{FLAG:11}_REACTION_REF, 3
	ENDIF
	SIF RESULT >= 0
		TFLAG:17 = RESULT
ENDIF

;習得の獲得
COMMON_PALAM:6 += 450 + 25 * (ABL:従順 + ABL:奉仕精神 * 2)

;行動ポイントを+1
EX:行動ポイント += 1

RETURN 1
