;キャラの変身後の名乗り口上の設定
@FIRSTSETTING_CHANGINGCALL_DETAIL, ARG:0, ARG:1
#FUNCTIONS
LOCAL:0 = ARG:1
LOCAL:1 = 0
LOCALS = %STRCLEAR()%

PRINTFORML {ARG:1}

;性格を大別する
;グループ1 強気系
IF LOCAL:0 == 12 || LOCAL:0 == 20 || LOCAL:0 == 26 || LOCAL:0 == 27
	LOCAL:1 = 1

;グループ2 弱気系
ELSEIF LOCAL:0 == 10 || LOCAL:0 == 11 || LOCAL:0 == 18
	LOCAL:1 = 2

;グループ3 活発系
ELSEIF LOCAL:0 == 13 || LOCAL:0 == 16 || LOCAL:0 == 17 || LOCAL:0 == 19 || LOCAL:0 == 23 || LOCAL:0 == 25
	LOCAL:1 = 3
	
;グループ4 大人しい・おっとり系
ELSEIF LOCAL:0 == 14 || LOCAL:0 == 15
	LOCAL:1 = 4

;グループ5 無口・物静か系
ELSEIF LOCAL:0 == 21 || LOCAL:0 == 22 || LOCAL:0 == 24 || LOCAL:0 == 28
	LOCAL:1 = 5
ENDIF

LOCAL:2 = RAND:6
IF LOCAL:2 == 0
	LOCALS = 、参上
	SIF LOCAL:1 == 1 || LOCAL:1 == 3
		LOCALS = %LOCALS%！
ELSEIF LOCAL:2 == 1
	LOCALS = 、見参
	SIF LOCAL:1 == 1 || LOCAL:1 == 3
		LOCALS = %LOCALS%！
ELSEIF LOCAL:2 == 2
	LOCALS = 、推参
	SIF LOCAL:1 == 1 || LOCAL:1 == 3
		LOCALS = %LOCALS%！
ELSEIF LOCAL:2 == 3
	LOCALS = 、準備完了
	SIF LOCAL:1 == 1 || LOCAL:1 == 3
		LOCALS = %LOCALS%！
ELSEIF LOCAL:2 == 4
	IF LOCAL:1 == 1
		LOCALS = 。さあ、行くわよ！
	ELSEIF LOCAL:1 == 2
		LOCALS = 。……っ！ 行きます！
	ELSEIF LOCAL:1 == 3
		LOCALS = 。よーし行くぞぉ！
	ELSEIF LOCAL:1 == 4
		LOCALS = 。さて。行きますよ
	ELSEIF LOCAL:1 == 5
		LOCALS = 。行く……ッ
	ENDIF
ELSEIF LOCAL:2 == 5
	IF LOCAL:1 == 1
		LOCALS = 。負けないわよ！
	ELSEIF LOCAL:1 == 2
		LOCALS = 。やるしか……ないよね……！
	ELSEIF LOCAL:1 == 3
		LOCALS = 。覚悟してねっ！
	ELSEIF LOCAL:1 == 4
		LOCALS = 。用意はいいかしら？
	ELSEIF LOCAL:1 == 5
		LOCALS = 。……殲滅開始
	ENDIF
ENDIF
RETURNF LOCALS
