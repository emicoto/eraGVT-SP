@FIRSTSETTING_CHANGINGCALL_RANDOM
#FUNCTIONS
LOCAL = RAND:100 + 2000
WHILE STR:LOCAL == ""
	LOCAL = RAND:100 + 2000
WEND
LOCALS = %STR:LOCAL%
RETURNF LOCALS
