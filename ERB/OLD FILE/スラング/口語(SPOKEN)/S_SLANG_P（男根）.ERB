@S_SLANG_P(ARG)
#FUNCTIONS
#DIMS S_SLANGWORD_P

;初期化
S_SLANGWORD_P=


;第一形容詞：状況（汁など）
IF TALENT:パイパン == 1
	SELECTCASE RAND:3
		CASE 2
		S_SLANGWORD_P+="不毛な"

		CASE 1
		S_SLANGWORD_P+="パイパンの"

		CASEELSE
		S_SLANGWORD_P+="毛も生えていない"

	ENDSELECT
ENDIF

SELECTCASE TALENT:ふたなり
	;天然ふたなり
	CASE 3
		;第二形容詞：形状表現
		;第三形容詞：動作表現
		S_SLANGWORD_P+="天然ふたなり"


	;天然ふたなり
	CASE 2
		;第二形容詞：形状表現
		;第三形容詞：動作表現
		S_SLANGWORD_P+="寄生ふたなり"


	;天然ふたなり
	CASE 1
		;第二形容詞：形状表現
		;第三形容詞：動作表現
		S_SLANGWORD_P+="後天ふたなり"


	;ふたなり以外
	CASEELSE
		;第二形容詞：形状表現
		;第三形容詞：動作表現
		;部位呼称
		IF TALENT:オトコ > 0
			IF TALENT:淫核
				S_SLANGWORD_P+="淫核"
			ELSE
				SELECTCASE RAND:6
					CASE 5
						S_SLANGWORD_P+="陰茎"
					CASE 4
						S_SLANGWORD_P+="男性器"
					CASE 3
						S_SLANGWORD_P+="ちんちん"
					CASE 2
						S_SLANGWORD_P+="男根"
					CASE 1
						S_SLANGWORD_P+="ペニス"
					CASEELSE
						S_SLANGWORD_P+="ちんこ"
				ENDSELECT
			ENDIF
		ENDIF

ENDSELECT







RETURNF S_SLANGWORD_P

