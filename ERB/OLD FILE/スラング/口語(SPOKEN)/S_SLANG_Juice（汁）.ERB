@S_SLANG_Juice(ARG,ARGS:0)
#DIMS S_SLANGWORD_Juice
#FUNCTIONS

;初期化
S_SLANGWORD_Juice=

;**************************
;液体名称分類
;**************************
SELECTCASE ARGS:0
	;精液は専用のコールへ
	CASE "ザーメン" , "精液" , "スペルマ"
		S_SLANGWORD_Juice=%S_SLANG_Semen(TARGET)%


	CASE "愛液" , "ラブジュース" , "膣分泌液"
		IF TALENT:淫壷>0 || TALENT:淫乱>0
			SELECTCASE RAND:2
				CASE 1
					S_SLANGWORD_Juice += "愛液"
				CASEELSE
					S_SLANGWORD_Juice += "淫水"
			ENDSELECT
		ELSE
			SELECTCASE RAND:2
				CASE 1
					S_SLANGWORD_Juice += "膣粘液"
				CASEELSE
					S_SLANGWORD_Juice += "潤滑液"
			ENDSELECT
		ENDIF


	CASE "腸液" , "直腸液" , "肛門液"
		IF TALENT:淫尻>0 || TALENT:淫乱>0
			SELECTCASE RAND:2
				CASE 1
					S_SLANGWORD_Juice += "肛蜜"
				CASEELSE
					S_SLANGWORD_Juice += "発情液"
			ENDSELECT
		ELSE
			SELECTCASE RAND:2
				CASE 1
					S_SLANGWORD_Juice += "腸液"
				CASEELSE
					S_SLANGWORD_Juice += "潤滑液"
			ENDSELECT
		ENDIF


	CASEELSE
		SELECTCASE RAND:4
			CASE 3
				S_SLANGWORD_Juice += "潤滑液"
			CASE 2
				S_SLANGWORD_Juice += "粘液"
			CASE 1
				S_SLANGWORD_Juice += "ラブジュース"
			CASEELSE
				S_SLANGWORD_Juice += ARGS:0
		ENDSELECT
ENDSELECT



RETURNF S_SLANGWORD_Juice


