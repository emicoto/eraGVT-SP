@S_SLANG_M(ARG)
#DIMS S_SLANGWORD_M
#FUNCTIONS

;初期化
S_SLANGWORD_M=


;第一形容詞：状況（汁など）
IF (STAIN:0 & 4)
	S_SLANGWORD_M+="精液が付いた"
ENDIF


;第二形容詞：形状表現
;第三形容詞：動作表現


;部位呼称
IF TALENT:淫乱
	S_SLANGWORD_M += "口マンコ"
ELSE
	SELECTCASE RAND:2
		CASE 1
			S_SLANGWORD_M += "唇"
		CASEELSE
			S_SLANGWORD_M += "口"
	ENDSELECT
ENDIF

RETURNF S_SLANGWORD_M


