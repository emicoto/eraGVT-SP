;Vagina(ヴァギナ)の淫語
;**********************************************************
@SLANG_V(ARG)
#DIMS SLANGWORD_V
#FUNCTIONS

;初期化
SLANGWORD_V=

;第一形容詞：状況（汁など）
IF (STAIN:3 & 4)
	SLANGWORD_V = %SLANGWORD_V%%SLANG_SEMEN(TARGET)%の滴り落ちる

ENDIF

;第二形容詞：形状表現
;第三形容詞：動作表現


;部位呼称
IF TALENT:淫壷
	SLANGWORD_V+="淫壷"
ELSEIF TALENT:淫乱
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_V+="肉壷"
		CASE 1
			SLANGWORD_V+="雌穴"
		CASEELSE
			SLANGWORD_V+="ドスケベマンコ"
	ENDSELECT
ELSE
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_V+="マンコ"
		CASE 2
			SLANGWORD_V+="女性器"
		CASE 1
			SLANGWORD_V+="ヴァギナ"
		CASEELSE
			SLANGWORD_V+="膣"
	ENDSELECT
ENDIF

RETURNF SLANGWORD_V

