;Womb(子宮)の淫語
;**********************************************************
@SLANG_W(ARG)
#DIMS SLANGWORD_W
#FUNCTIONS

;初期化
SLANGWORD_W=

;第一形容詞：状況（汁など）
IF (STAIN:3 & 4)
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_W+="精液で満たされた"
		CASE 1
			SLANGWORD_W+="ザーメンで溢れる"
		CASEELSE
			SLANGWORD_W+="精液で穢された"
	ENDSELECT
ENDIF


;第二形容詞：形状表現
;第三形容詞：動作表現

;部位呼称
IF TALENT:淫壷
	SLANGWORD_W+="淫壷"
ELSEIF TALENT:淫乱
	SELECTCASE RAND:2
		CASE 1
			SLANGWORD_W+="呼吸をするように収縮する肉壷"
		CASEELSE
			SLANGWORD_W+="パクパクと口を広げるポルチオ"
	ENDSELECT
ELSE
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_W+="赤ちゃんの場所"
		CASE 2
			SLANGWORD_W+="子袋"
		CASE 1
			SLANGWORD_W+="赤ちゃんの部屋"
		CASEELSE
			SLANGWORD_W+="子宮"
	ENDSELECT
ENDIF

RETURNF SLANGWORD_W


