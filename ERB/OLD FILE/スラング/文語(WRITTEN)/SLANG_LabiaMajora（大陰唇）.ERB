;LabiaMajora(大陰唇)の淫語
@SLANG_LabiaMajora(ARG)
#DIMS SLANGWORD_LabiaMajora
#FUNCTIONS

;初期化
SLANGWORD_LabiaMajora=

;第一形容詞：状況（汁気など）
;STAIN:3:膣、ワレメ
IF (STAIN:3 & 4)
	SLANGWORD_LabiaMajora = %SLANGWORD_LabiaMajora%%SLANG_SEMEN(TARGET)%
	SELECTCASE RAND:2
		CASE 1
			SLANGWORD_LabiaMajora += "で穢されている"
		CASEELSE
			SLANGWORD_LabiaMajora += "が濡れている"
	ENDSELECT
ENDIF



;第二形容詞：形状表現
;安産型
IF TALENT:812 == 1
	SLANGWORD_LabiaMajora += "プリプリしている"
;むちむち
ELSEIF TALENT:812 == 2
	SLANGWORD_LabiaMajora += "ムチムチしている"
;イカ腹
ELSEIF TALENT:812 == 3
	SLANGWORD_LabiaMajora += "プニっとしている"
;スレンダー
ELSEIF TALENT:812 == 4
	SLANGWORD_LabiaMajora += "スラッとしている"
ENDIF



;第三形容詞：動作表現
IF TALENT:淫乱 > 0
	SELECTCASE RAND:2
		CASE 1
			SLANGWORD_LabiaMajora += "期待で開く"
		CASEELSE
			SLANGWORD_LabiaMajora += "興奮で開く"
	ENDSELECT
ENDIF



;部位呼称
IF TALENT:淫乱 > 0
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_LabiaMajora += "淫らな裂け目"
		CASE 1
			SLANGWORD_LabiaMajora += "淫らな谷間"
		CASEELSE
			SLANGWORD_LabiaMajora += "淫裂"
	ENDSELECT
ELSE
	SELECTCASE RAND:4
		CASE 3
			SLANGWORD_LabiaMajora += "大陰唇"
		CASE 2
			SLANGWORD_LabiaMajora += "陰裂"
		CASE 1
			SLANGWORD_LabiaMajora += "ワレメ"
		CASEELSE
			SLANGWORD_LabiaMajora += "縦筋"
	ENDSELECT
ENDIF


;合成して出来上がった淫語を返す
RETURNF SLANGWORD_LabiaMajora





