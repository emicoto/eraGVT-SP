;Hip(尻)の淫語
;**********************************************************
@SLANG_H(ARG)
#DIMS SLANGWORD_H
#FUNCTIONS

;初期化
SLANGWORD_H=

;第一形容詞：状況（汁など）
IF (STAIN:4 & 4)
	SLANGWORD_H = %SLANGWORD_H%%SLANG_SEMEN(TARGET)%がぶっかけられている
ENDIF

;第二形容詞：形状表現
;安産型
IF TALENT:812 == 1
	SLANGWORD_H += "どっしりとしている"
;むちむち
ELSEIF TALENT:812 == 2
	SLANGWORD_H += "むちむちしている"
;イカ腹
ELSEIF TALENT:812 == 3
	SLANGWORD_H += "ぷりぷりしっている"
;スレンダー
ELSEIF TALENT:812 == 4
	SLANGWORD_H += "肉付きの薄い"
ENDIF


;第三形容詞：動作表現


;部位呼称
IF TALENT:淫尻>0
	SLANGWORD_H += "淫尻"
ELSEIF TALENT:淫乱>0
	SELECTCASE RAND:3
		CASE 2
			SLANGWORD_H += "りんご尻"
		CASE 1
			SLANGWORD_H += "桃尻"
		CASEELSE
			SLANGWORD_H += "尻鞠"
	ENDSELECT
ELSE
	SELECTCASE RAND:3
		CASE 3
			SLANGWORD_H += "尻の谷間"
		CASE 2
			SLANGWORD_H += "ヒップ"
		CASE 1
			SLANGWORD_H += "尻肉"
		CASEELSE
			SLANGWORD_H += "お尻"
	ENDSELECT
ENDIF

RETURNF SLANGWORD_H


