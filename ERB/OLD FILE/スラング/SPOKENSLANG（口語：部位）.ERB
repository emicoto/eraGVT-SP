;スラングの自動切り替えと呼び出し
@SPOKENSLANG(ARGS:0)
#DIMS SPOKENSLANG_WORD
#FUNCTIONS

;初期化
SPOKENSLANG_WORD=

SELECTCASE ARGS:0
	CASE "アナル" , "肛門"
		SPOKENSLANG_WORD=%S_SLANG_A(TARGET)%

	CASE "おっぱい" , "胸" , "バスト"
		SPOKENSLANG_WORD=%S_SLANG_B(TARGET)%

	CASE "クリトリス" , "陰核"
		SPOKENSLANG_WORD=%S_SLANG_C(TARGET)%

	CASE "ヒップ" , "お尻"
		SPOKENSLANG_WORD=%S_SLANG_H(TARGET)%


	;**********************************************************
	CASE "愛液" , "ラブジュース" , "膣分泌液"
		SPOKENSLANG_WORD=%S_SLANG_Juice(TARGET,"愛液")%
	CASE "腸液" , "直腸液" , "肛門液"
		SPOKENSLANG_WORD=%S_SLANG_Juice(TARGET,"腸液")%
	;**********************************************************


	;**********************************************************
	CASE "ラビア" , "陰唇"
		SPOKENSLANG_WORD=%S_SLANG_Labia(TARGET)%

	CASE "ワレメ" , "大陰唇"
		SPOKENSLANG_WORD=%S_SLANG_LabiaMajora(TARGET)%

	CASE "ビラビラ" , "小陰唇"
		SPOKENSLANG_WORD=%S_SLANG_LabiaMinora(TARGET)%

	;**********************************************************


	CASE "マウス" , "口"
		SPOKENSLANG_WORD=%S_SLANG_M(TARGET)%

	CASE "ニップル" , "乳首"
		SPOKENSLANG_WORD=%S_SLANG_N(TARGET)%

	CASE "ペニス" , "男根" , "チンコ"
		SPOKENSLANG_WORD=%S_SLANG_P(TARGET)%

	CASE "ザーメン" , "精液"
		SPOKENSLANG_WORD=%S_SLANG_Semen(TARGET)%

	CASE "金玉" , "睾丸" , "テスティクル"
		SPOKENSLANG_WORD=%S_SLANG_Testicle(TARGET)%

	CASE "尿道" , "膀胱"
		SPOKENSLANG_WORD=%S_SLANG_U(TARGET)%

	CASE "ヴァギナ" , "膣"
		SPOKENSLANG_WORD=%S_SLANG_V(TARGET)%

	CASE "子宮"
		SPOKENSLANG_WORD=%S_SLANG_W(TARGET)%

	;**********************************************************
	;該当なしで、そのまま部位名だけ返す
	CASEELSE
		SPOKENSLANG_WORD=%ARGS:0%
	;**********************************************************


ENDSELECT


RETURNF SPOKENSLANG_WORD




