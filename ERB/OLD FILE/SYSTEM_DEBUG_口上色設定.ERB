	PRINTFORM %TOSTR(ARG:0,"X6")%
	SIF RESULT:0 == ARG:0
		PRINTFORMD 同じ色です！
	PRINTL 
CATCH
	IF ARG:0 == -16777216
		RESETCOLOR
		GETDEFCOLOR
		PRINTFORM      3　
		PRINTFORM あなた(主観)　　　　　　　　　　　　　　
		PRINTFORM %TOSTR(RESULT:0,"X6")%（デフォルト色）
		PRINTL 
	ENDIF
ENDCATCH
RESETCOLOR
PRINTDL ↓専用口上
FOR COUNT, 100, 2000
	IF EXISTCSV(COUNT) == 1
		TRYCCALLFORM KOJO_{COUNT}_COLOR
			GETCOLOR
			PRINTFORM {COUNT,6}　
			PRINTFORM %CSVNAME(COUNT),40,LEFT%
			PRINTFORM %TOSTR(RESULT:0,"X6")%
			SETCOLOR ARG:0
			PRINTFORM %TOSTR(ARG:0,"X6")%
			SIF RESULT:0 == ARG:0
				PRINTFORMD 同じ色です！
			PRINTL 
		CATCH
			IF ARG:0 == -16777216
				RESETCOLOR
				GETDEFCOLOR
				PRINTFORM {COUNT,6}　
				PRINTFORM %CSVNAME(COUNT),40,LEFT%
				PRINTFORM %TOSTR(RESULT:0,"X6")%（デフォルト色）
				PRINTL 
			ENDIF
		ENDCATCH
	ENDIF
RESETCOLOR
NEXT
