@KOJO_COLOR_LIST, ARG:0
PRINTDL ↓デフォルト色
RESETCOLOR
GETDEFCOLOR
PRINTFORM       　
PRINTFORM デフォルト　　　　　　　　　　　　　　　
PRINTFORM %TOSTR(RESULT:0,"X6")%
SETCOLOR ARG:0
PRINTFORM %TOSTR(ARG:0,"X6")%
SIF RESULT:0 == ARG:0
	PRINTFORMD 同じ色です！
PRINTL 
RESETCOLOR
PRINTDL ↓汎用(性格)口上
FOR COUNT, 10, 30
	TRYCCALLFORM KOJO_0_COLOR_{COUNT}
		GETCOLOR
		PRINTFORM   0_{COUNT}　
		PRINTFORM %TALENTNAME:COUNT,40,LEFT%
		PRINTFORM %TOSTR(RESULT:0,"X6")%
		SETCOLOR ARG:0
		PRINTFORM %TOSTR(ARG:0,"X6")%
		SIF RESULT:0 == ARG:0
			PRINTFORMD 同じ色です！
		PRINTL 
	CATCH
		IF ARG:0 == -16777216
			RESETCOLOR
			GETDEFCOLOR
			IF TALENTNAME:COUNT !=""
				PRINTFORM   0_{COUNT}　
				PRINTFORM %TALENTNAME:COUNT,40,LEFT%
				PRINTFORM %TOSTR(RESULT:0,"X6")%（デフォルト色）
				PRINTL 
			ENDIF
		ENDIF
	ENDCATCH
RESETCOLOR
NEXT
PRINTDL ↓汎用(特殊)口上
TRYCCALLFORM KOJO_2_COLOR
	GETCOLOR
	PRINTFORM      2　
	PRINTFORM ロボ風　　　　　　　　　　　　　　　　　
	PRINTFORM %TOSTR(RESULT:0,"X6")%
