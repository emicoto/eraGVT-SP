;--------------------------------------------------
;ボス触手のERBの数を返す
;今はまだ１００種類までしか作れないので注意
@GET_BOSS_ERB_NUM
VARSET LOCAL
LOCAL = 1
WHILE LOCAL:1 == 0
	TRYCCALLFORM TENTACLE_BOSS_{LOCAL}
		LOCAL += 1
	CATCH
		LOCAL:1 = 1
	ENDCATCH
WEND
RETURN LOCAL - 1


